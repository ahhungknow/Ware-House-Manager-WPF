<UserControl x:Class="WareHouse_Manager.UC.InputDetailUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WareHouse_Manager.UC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Visible">
            <ListView>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Mã hàng"></GridViewColumn>
                        <GridViewColumn Header="Tên hàng"></GridViewColumn>
                        <GridViewColumn Header="Số lượng nhập"></GridViewColumn>
                        <GridViewColumn Header="Giá nhập"></GridViewColumn>
                        <GridViewColumn Header="Giá bán"></GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </ScrollViewer>
    </Grid>
</UserControl>
